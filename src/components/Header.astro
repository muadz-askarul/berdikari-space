---
import Link from '@/components/Link.astro'
import ThemeToggle from '@/components/ThemeToggle.astro'
import MobileMenu from '@/components/ui/mobile-menu'
import { NAV_LINKS, SOCIAL_LINKS } from '@/consts'
import { Image } from 'astro:assets'
import { default as logoDark } from '../../public/static/logo-dark.svg'
import { default as logo } from '../../public/static/logo.svg'
import SocialIcons from './SocialIcons.astro'
---

<header transition:persist>
  <div
    class="relative mx-auto flex h-[60px] max-w-3xl items-center justify-between gap-4 px-4 py-3"
  >
    <div class="hidden sm:block">
      <SocialIcons links={SOCIAL_LINKS} position="start" />
    </div>
    <div class="flex items-center sm:gap-4">
      <MobileMenu client:load transition:persist />
    </div>
    <Link
      href="/"
      class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-4"
    >
      <Image
        src={logo}
        alt="Logo"
        title={'Berdikari Logo'}
        class="dark:hidden"
      />
      <Image
        src={logoDark}
        alt="Logo Dark"
        title={'Berdikari Logo Dark'}
        class="hidden dark:block"
      />
    </Link>
    <ThemeToggle transition:persist />
  </div>

  <div class="mx-auto max-w-3xl px-4">
    <nav
      class="hidden items-center justify-center gap-4 text-sm sm:flex sm:gap-6"
    >
      {
        NAV_LINKS.map((item) => (
          <Link
            href={item.href}
            class="dark:text-foreground/80 hover:text-foreground/80 text-red-400/90 capitalize transition-colors dark:hover:text-red-400/90"
          >
            {item.label}
          </Link>
        ))
      }
    </nav>
  </div>
</header>
