---
import Link from '@/components/Link.astro'
import ThemeToggle from '@/components/ThemeToggle.astro'
import MobileMenu from '@/components/ui/mobile-menu'
import { NAV_LINKS } from '@/consts'
import { Image } from 'astro:assets'
import logo from '../../public/static/logo.svg'
---

<header transition:persist>
  <div
    class="relative mx-auto flex h-[60px] max-w-3xl items-center justify-between gap-4 px-4 py-3"
  >
    <div class="flex items-center sm:gap-4">
      <MobileMenu client:load transition:persist />
    </div>
    <Link
      href="/"
      class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-4"
    >
      <Image src={logo} alt="Logo" />
    </Link>
    <ThemeToggle transition:persist />
  </div>

  <div
    class="mx-auto max-w-3xl px-4"
  >
    <nav class="hidden items-center gap-4 text-sm sm:flex sm:gap-6 justify-center">
      {
        NAV_LINKS.map((item) => (
          <Link
            href={item.href}
            class="text-foreground/80 hover:text-foreground capitalize transition-colors"
          >
            {item.label}
          </Link>
        ))
      }
    </nav>
  </div>
</header>
