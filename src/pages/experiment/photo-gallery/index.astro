<style lang="scss">
  .container {
    padding: 0.25em;
  }

  // BASIC

  ul {
    display: flex;
    flex-wrap: wrap;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  li {
    height: 40vh;
    flex-grow: 1;
  }

  img:hover {
    transform: scale(1.02);
    transition: transform 0.3s ease;
    // border: 1px inset;
    // border-color: color-mix(in oklab, var(--color-red-400, oklch(70.4% 0.191 22.216)) /* oklch(70.4% 0.191 22.216) */ 90%, transparent);;
  }

  li:last-child {
    // There's no science in using "10" here. In all my testing, this delivered the best results.
    flex-grow: 10;
  }

  img {
    max-height: 100%;
    min-width: 100%;
    object-fit: cover;
    vertical-align: bottom;
  }

  // ADVANCED

  // Portrait

  @media (max-aspect-ratio: 1/1) {
    li {
      height: 30vh;
    }
  }

  // Short screens

  @media (max-height: 480px) {
    li {
      height: 80vh;
    }
  }

  // Smaller screens in portrait

  @media (max-aspect-ratio: 1/1) and (max-width: 480px) {
    ul {
      flex-direction: row;
    }

    li {
      height: auto;
      width: 100%;
    }
    img {
      width: 100%;
      max-height: 75vh;
      min-width: 0;
    }
  }
</style>

<div class="container">
  <ul>
    {
      images.map((image) => {
        return (
          <li>
            <a
              href={image.src}
              class="photo-item glightbox absolute transition-transform hover:z-10 hover:scale-[1.02]"
              data-gallery="gallery1"
              data-type="image"
              data-glightbox={image.alt ? `title: ${image.alt}` : undefined}
            >
              <img src={image.src} alt={image.alt} loading="lazy" />
            </a>
          </li>
        )
      })
    }
  </ul>
</div>

<script>
  import GLightbox from 'glightbox';
  GLightbox({
		selector: '.glightbox',
		openEffect: 'zoom',
		closeEffect: 'fade',
		width: 'auto',
		height: 'auto',
	});
</script>

